---
import client from "../graphql/client/ApolloClient";
import Layout from "../layouts/Layout.astro";
import { type ICommonPagesQuery } from "../graphql/generatedType/cmsTypes";
import { PrivacyPolicyQuery } from "../graphql/gql/cms.gql";
import Privacy from "../components/Privacy/Privacy";

const { data: cmsData } = await client.query<ICommonPagesQuery>({
  query: PrivacyPolicyQuery,
  variables: {
    id: "2735",
  },
});
---

<Layout
  title={cmsData?.page?.seo?.title}
  description={cmsData?.page?.seo?.metaDesc}
  metaKeywords={cmsData?.page?.seo?.metaKeywords}
  opengraphDescription={cmsData?.page?.seo?.opengraphDescription}
  metaRobotsNofollow={cmsData?.page?.seo?.metaRobotsNofollow}
  metaRobotsNoindex={cmsData?.page?.seo?.metaRobotsNoindex}
  twitterDescription={cmsData?.page?.seo?.twitterDescription}
  twitterTitle={cmsData?.page?.seo?.twitterTitle}
  twitterImage={cmsData?.page?.seo?.twitterImage?.mediaItemUrl}
  twitterImage={cmsData?.page?.seo?.twitterImage?.altText}
  opengraphTitle={cmsData?.page?.seo?.opengraphTitle}
  opengraphType={cmsData?.page?.seo?.opengraphType}
  opengraphUrl={cmsData?.page?.seo?.opengraphUrl}
  opengraphSiteName={cmsData?.page?.seo?.opengraphSiteName}
  focuskw={cmsData?.page?.seo?.focuskw}
  canonical={cmsData?.page?.seo?.canonical}
  schema={cmsData?.page?.seo?.schema?.raw}
>
  <Privacy data={cmsData} />
</Layout>
